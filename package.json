{
  "name": "deepthought_web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx server.ts",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "NODE_ENV=production node .next/server.js",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npx vitest --config=vitest.config.mjs",
    "test:watch": "npx vitest --config=vitest.config.mjs --watch",
    "test:e2e": "playwright test --config=tests/playwright.config.mjs",
    "verify": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@types/sanitize-html": "^2.16.0",
    "gray-matter": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "sanitize-html": "^2.17.0",
    "yjs": "^13.6.27",
    "@y/websocket-server": "^0.1.1",
    "y-protocols": "^1.0.5",
    "lib0": "^0.2.102"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.18",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.7.1",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "y-websocket": "^3.0.0"
  }
}
